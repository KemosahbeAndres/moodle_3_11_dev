{{!
    @template block_sic/sic/details

    Example context (json):{

    }
}}
{{< block_sic/layout}}
    {{$ content}}
        {{#history}}
            <div class="card">
                <div class="card-header">
                    <h2>Detalle de Proceso (ID {{id_proceso_externo}})</h2>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <div class="col-md-6">
                            <dt>ID Proceso</dt>
                            <dd>{{id_proceso_externo}}</dd>
                            <dt>Fecha</dt>
                            <dd>{{fecha}}</dd>
                            <dt>Estado</dt>
                            <dd>{{estado}}</dd>
                            <dt>Codigo Estado</dt>
                            <dd>{{status_code}}</dd>
                            <dt>Cantidad de Registros</dt>
                            <dd>{{cantidad}}</dd>
                        </div>
                        <div class="col-md-6">
                            <dt>Codigo Externo</dt>
                            <dd>{{codigo_externo}}</dd>
                            <dt>Rut OTEC</dt>
                            <dd>{{rut_otec}}</dd>
                            <dt>Observaciones</dt>
                            <dd>{{observaciones}}</dd>
                            <dt>Observaciones SIC</dt>
                            <dd>{{observaciones_sic}}</dd>
                        </div>
                    </dl>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h2>Registros <span class="badge badge-primary">{{cantidad}}</span></h2>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover table-responsive-sm">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Rut Alumno</th>
                                <th>Estado</th>
                                <th>Avance</th>
                                <th>Tiempo Conexion</th>
                                <th>Observaciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#listaregistros}}
                                <tr>
                                    <td>{{id_registro}}</td>
                                    <td>{{rut_alumno}}-{{dv_alumno}}</td>
                                    <td>{{estado}}</td>
                                    <td>{{#round}}{{porcentaje_avance}}{{/round}}</td>
                                    <td>{{#userdate}}{{tiempo_conectividad}},%H horas y %M minutos{{/userdate}}</td>
                                    <td>{{obs_registro}}</td>
                                </tr>
                            {{/listaregistros}}
                        </tbody>
                    </table>
                </div>
            </div>
        {{/history}}
    {{/ content}}
{{/ block_sic/layout}}
