{{< block_sic/layout}}
    {{$ content}}
        {{#participants}}
            <div class="grid gap-3">
                <div class="card">
                    <div class="card-header">
                        <h2>Gestor</h2>
                    </div>
                    <div class="card-body">
                        {{#manager}}
                            <dl class="row">
                                <div class="col-md-6">
                                    <dt>ID</dt>
                                    <dd>{{id}}</dd>
                                    <dt>Nombre</dt>
                                    <dd>{{name}}</dd>
                                </div>
                                <div class="col-md-6">
                                    <dt>Rut</dt>
                                    <dd>{{rut}}</dd>
                                    <dt>Rol</dt>
                                    <dd>{{role}}</dd>
                                </div>
                            </dl>
                        {{/manager}}
                        {{^manager}}
                            <div class="alert alert-warning">No hay Gestor matriculado!</div>
                        {{/manager}}
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2>Moderadores</h2>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre</th>
                                    <th>Rut</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#moderators}}
                                    <tr>
                                        <td>{{id}}</td>
                                        <td>{{name}}</td>
                                        <td>{{rut}}</td>
                                    </tr>
                                {{/moderators}}
                            </tbody>
                        </table>
                        {{^moderators}}
                            <p class="alert alert-warning">No hay moderadores matriculados!</p>
                        {{/moderators}}
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h2>Profesores</h2>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Rut</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#teachers}}
                                <tr>
                                    <td>{{id}}</td>
                                    <td>{{name}}</td>
                                    <td>{{rut}}</td>
                                </tr>
                            {{/teachers}}
                        </tbody>
                    </table>
                    {{^teachers}}
                        <div class="alert alert-warning">No hay profesores matriculados!</div>
                    {{/teachers}}
                </div>
            </div>
            <div class="card">
                <div class="card-header hstack hstack-sm gap-3">
                    <h2>Estudiantes</h2>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover table-responsive-sm">
                        <thead>
                            <tr>
                                <th>Acciones</th>
                                <th>Nombre</th>
                                <th>Rut</th>
                                <th>Avance</th>
                                <th>Tiempo Conexion</th>
                                <th>Promedio</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#students}}
                                <tr>
                                    <td>
                                        {{> block_sic/participants/studentsactionbar}}
                                    </td>
                                    <td>{{name}}</td>
                                    <td>{{rut}}</td>
                                    <td>{{progress}}%</td>
                                    <td>{{hours}} horas</td>
                                    <td>{{average}}</td>
                                    <td>
                                        {{#active}}
                                            <p class="badge
                                                {{#studying}}badge-primary{{/studying}}
                                                {{#approved}}badge-success{{/approved}}
                                                {{#reproved}}badge-danger{{/reproved}}">
                                                {{state}}
                                            </p>
                                        {{/active}}
                                        {{^active}}
                                            <p class="badge badge-danger">exluido</p>
                                        {{/active}}
                                    </td>
                                </tr>
                            {{/students}}
                        </tbody>
                    </table>
                    {{^students}}
                        <div class="alert alert-warning">No hay alumnos matriculados!</div>
                    {{/students}}
                </div>
            </div>
        {{/participants}}
    {{/ content}}
{{/ block_sic/layout}}
