{{< block_sic/layout}}
    {{$ content}}
        <div class="card">
            <div class="card-header">
                <h2>Asignacion masiva de secciones</h2>
            </div>
            <div class="card-body">
                {{#module}}
                <dl>
                    <dt>ID</dt>
                    <dd>{{id}}</dd>
                    <dt>Codigo</dt>
                    <dd>{{code}}</dd>
                </dl>
                {{/module}}
                <h3>Secciones:</h3>
                <form action="{{massive_reassignurl}}" class="vstack gap-3" method="post">
                    <input type="hidden" name="moduleid" value="{{module.id}}">
                    <div class="list-group">
                        {{#sections}}
                            <div class="list-group-item px-5">
                                <input type="checkbox" name="section_{{id}}" class="form-check-input">
                                Seccion {{name}} (ID {{id}})
                            </div>
                        {{/sections}}
                    </div>
                    <div class="hstack hstack-sm gap-3">
                        <input type="submit" class="btn btn-outline-success" value="Asignar">
                        <a href="{{courseurl}}" class="btn btn-outline-danger">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    {{/ content}}
{{/ block_sic/layout}}