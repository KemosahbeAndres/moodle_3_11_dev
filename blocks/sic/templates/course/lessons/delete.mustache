{{< block_sic/layout}}
    {{$ content}}
        <div class="card">
            <div class="card-header">
                <h2>Borrando Clase (ID {{lesson.id}})</h2>
            </div>
            <div class="card-body">
                <form class="vstack gap-3" action="{{confirm_delete_lessonurl}}&lessonid={{lesson.id}}" method="post">
                    {{#lesson}}
                        <input class="form-control" type="hidden" name="lessonid" value="{{id}}">
                        <dl>
                            <dt>ID</dt>
                            <dd>{{id}}</dd>
                            <dt>Codigo</dt>
                            <dd>{{code}}</dd>
                            <dt>Fecha</dt>
                            <dd>{{date}}</dd>
                            <dt>Duracion (minutos)</dt>
                            <dd>{{duration}}</dd>
                        </dl>
                    {{/lesson}}

                    <div class="hstack hstack-sm gap-3">
                        <input type="submit" class="btn btn-outline-danger" value="Eliminar">
                        <a class="btn btn-outline-primary" href="{{lessonsurl}}">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    {{/ content}}
{{/ block_sic/layout}}