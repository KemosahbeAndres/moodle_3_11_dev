{{< block_sic/layout}}
    {{$ content}}
            <div class="card">
                <div class="card-header hstack hstack-sm gap-3">
                    <h2>Clases</h2>
                    <a href="{{create_lessonurl}}" class="btn btn-outline-primary">Nueva Clase</a>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Accion</th>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Fecha</th>
                                <th>Duracion</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#lessons}}
                                <tr>
                                    <td>
                                        <a href="{{edit_lessonurl}}&lessonid={{id}}" class="btn btn-outline-primary">Modificar</a>
                                        <a href="{{delete_lessonurl}}&lessonid={{id}}" class="btn btn-outline-danger">Quitar</a>
                                    </td>
                                    <td>{{id}}</td>
                                    <td>{{code}}</td>
                                    <td>{{date}}</td>
                                    <td>{{duration}} minutos</td>
                                </tr>
                            {{/lessons}}
                        </tbody>
                    </table>
                    {{^lessons}}
                        <div class="alert alert-warning">No hay clases en este curso!</div>
                    {{/lessons}}
                </div>
            </div>
    {{/ content}}
{{/ block_sic/layout}}