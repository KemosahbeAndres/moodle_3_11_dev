{{< block_sic/layout}}
    {{$ content}}
        <div class="card">
            <div class="card-header">
                <h2>Creando Clase</h2>
            </div>
            <div class="card-body">
                <form class="vstack gap-3" action="{{save_lessonurl}}" method="post">
                    <input type="hidden" name="lessonid" value="{{lesson.id}}">
                    <div class="input-group">
                        <label for="activityid" class="input-group-text">Selecciona una Actividad:</label>
                        <select name="activityid" class="custom-select" required>
                            {{#activities}}
                                <option value="{{id}}" {{#selected}}selected{{/selected}}>(ID {{id}}) {{code}} (Tipo: {{type}})</option>
                            {{/activities}}
                        </select>
                    </div>
                    <div class="input-group">
                        <label for="date" class="input-group-text">Fecha y Hora</label>
                        <input class="form-control" type="datetime-local" name="datetime" value="{{lesson.date}}" required>
                    </div>
                    <div class="input-group">
                        <label for="duration" class="input-group-text">Duracion (minutos)</label>
                        <input class="form-control" type="number" min="0" name="duration" placeholder="1" value="{{lesson.duration}}" required>
                    </div>

                    <div class="hstack hstack-sm gap-3">
                        <input class="btn btn-outline-success" type="submit" value="Guardar">
                        <a class="btn btn-outline-danger" href="{{lessonsurl}}">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    {{/ content}}
{{/ block_sic/layout}}