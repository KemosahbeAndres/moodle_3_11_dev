    Example context (json):{

    }
}}

{{< block_sic/layout}}
    {{$ content}}
        <div class="card">
            <div class="card-header">
                <h2>Editando Modulo (ID {{module.id}})</h2>
            </div>
            <div class="card-body">
                <form class="vstack gap-3" action="{{save_moduleurl}}" method="post">
                    {{#module}}
                        <input class="form-control" type="hidden" name="moduleid" value="{{id}}">
                        <input class="form-control" type="text" placeholder="Codigo" name="code" value="{{code}}" required>
                        <input class="form-control" type="datetime-local" placeholder="Fecha Inicio" name="startdate" value="{{startdate}}" required>
                        <input class="form-control" type="datetime-local" placeholder="Fecha Fin" name="enddate" value="{{enddate}}" required>
                    {{/module}}

                    <div class="hstack hstack-sm gap-3">
                        <input type="submit" class="btn btn-outline-success" value="Guardar">
                        <a class="btn btn-outline-danger" href="{{courseurl}}">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    {{/ content}}
{{/ block_sic/layout}}